# ===== Hugging Face Integration =====
HF_TOKEN=your_hugging_face_token_here
HF_DATASET_REPO=zongowo111/trading-data
HF_MODEL_REPO=zongowo111/trading-models

# ===== Discord Configuration (for alerts) =====
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=1447571961575379006
DISCORD_ALERT_ROLE_ID=your_role_id_for_mentions

# ===== Binance API (Required for data fetching) =====
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ===== CoinGecko API (Optional, for market data) =====
COINGECKO_API_KEY=your_coingecko_api_key_here

# ===== Database Configuration =====
DATABASE_URL=sqlite:///crypto_predictor.db
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=False

# ===== Data Configuration =====
DATA_DIR=backend/data/raw
MODEL_DIR=models
LOGS_DIR=logs
REPORTS_DIR=reports

# ===== Model Settings =====
MODEL_TYPE=lstm
LOOKBACK_PERIOD=60
PREDICTION_HORIZON=7
BATCH_SIZE=32
EPOCHS=200
EARLY_STOPPING_PATIENCE=20
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.15

# ===== Feature Engineering =====
NUM_TECHNICAL_INDICATORS=35
FEATURE_SCALING=minmax
PCA_ENABLED=False
PCA_COMPONENTS=20

# ===== Training Configuration =====
USE_BINANCE_API=True
LSTM_UNITS_1=128
LSTM_UNITS_2=64
DENSE_UNITS=32
DROPOUT_RATE=0.2
LEARNING_RATE=0.001
OPTIMIZER=adam
LOSS_FUNCTION=mse

# ===== Trading Settings =====
MIN_CONFIDENCE_THRESHOLD=0.65
UPDATE_INTERVAL=3600
RETRY_ATTEMPTS=3
API_TIMEOUT=10
BATCH_DELAY=0.5

# ===== Data Fetching =====
CRYPTO_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT,SOLUSDT,XRPUSDT,ADAUSDT,AVAXUSDT,DOGEUSDT,LINKUSDT,MATICUSDT,LTCUSDT,UNIUSDT,ATOMUSDT,XMRUSDT,NEARUSDT,ARBUSDT,OPUSDT,APTUSDT,SUIUSDT,PEPEUSDT,SHIBUSDT,ICPUSDT,ETCUSDT,FILUSDT,AAVEUSDT
TIMEFRAMES=15m,1h
CANDLES_PER_SYMBOL=3000

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_predictor.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===== GitHub Configuration (for auto-push) =====
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_OWNER=caizongxun
GITHUB_REPO_NAME=MOP
AUTO_PUSH_ENABLED=True

# ===== AI Model Auto-Mode (IMPORTANT!) =====
# Set REQUIRES_USER_APPROVAL=false to enable auto-mode for AI agents
# This allows the AI to push changes to GitHub without user confirmation
AI_AUTO_MODE=true
REQUIRES_USER_APPROVAL=false

# ===== Development Settings =====
DEBUG=False
RANDOM_SEED=42
GPU_MEMORY_FRACTION=0.8
NUM_WORKERS=4

# ===== Notification Settings =====
SEND_DISCORD_ALERTS=True
SEND_EMAIL_ALERTS=False
EMAIL_ADDRESS=your_email@example.com
SLACK_WEBHOOK_URL=

# ===== Hyperparameter Search =====
GRID_SEARCH_ENABLED=False
LOOKBACK_SEARCH_RANGE=30,60,90
LSTM_UNITS_SEARCH_RANGE=64,128,256
DROPOUT_SEARCH_RANGE=0.1,0.2,0.3
LR_SEARCH_RANGE=0.0001,0.001,0.01

# ===== Model Versioning =====
MODEL_VERSION_PREFIX=v
SAVE_CHECKPOINT=True
CHECKPOINT_INTERVAL=10

# ===== Production Settings =====
ENVIRONMENT=development
USE_HTTPS=False
API_HOST=localhost
API_PORT=8000
